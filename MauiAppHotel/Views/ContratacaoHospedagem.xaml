<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Background}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        <Label 
            Text="Calculo da Diária"
            FontFamily="ComicRelief"
            FontSize="40"
            TextColor="{StaticResource Primary}"
            HorizontalOptions="Center"/>

        <Frame Padding="10" 
               BackgroundColor="{StaticResource Background}"
               BorderColor="{StaticResource Accent}">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           TextColor="{StaticResource SecondaryDarkText}"
                           Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"
                           />

                    <Stepper Grid.Row="0" Grid.Column="2" 
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10" 
                             Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           TextColor="{StaticResource SecondaryDarkText}"
                        Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1"
                            TextColor="{StaticResource Primary}"
                            Text="{Binding Value}"
                            BindingContext="{x:Reference stp_criancas}"
                            />

                    <Stepper Grid.Row="1" Grid.Column="2" 
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10" 
                             Increment="1"/>
                </Grid>

                <Label Text="Escolha sua Suíte"
                       TextColor="{StaticResource SecondaryDarkText}"/>

                <Picker x:Name="pck_quarto"
                        TextColor="{StaticResource SecondaryDarkText}"
                        Title="Selecione sua Acomodação" 
                        ItemDisplayBinding="{Binding Descricao}"/>
                <!-- Botão Ver fotos dos quartos -->
                <Button Text="Ver fotos dos quartos"
                        BackgroundColor="{StaticResource Tertiary}"
                        TextColor="White"
                        HorizontalOptions="Center"
                        CornerRadius="20"
                        Clicked="BtnFotos_Clicked"
                        Margin="0,15,0,0" />

                <Frame Padding="10"
                       Margin="10"
                       BackgroundColor="{StaticResource Background}"
                       BorderColor="{StaticResource Accent}">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia"
                               TextColor="{StaticResource SecondaryDarkText}"/>
                        <HorizontalStackLayout>
                            <Label Text="Check-in:" 
                                   TextColor="{StaticResource SecondaryDarkText}"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" 
                                   TextColor="{StaticResource SecondaryDarkText}"/>
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botão Avançar -->
                <Button Text="Avançar"
                        Clicked="Button_Clicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"/>

                <!-- Botão Sobre -->
                <Button Text="Sobre"
                        Clicked="OnSobreClicked"
                        BackgroundColor="{StaticResource Tertiary}"
                        TextColor="White"
                        HorizontalOptions="End"
                        Margin="10"/>
            </VerticalStackLayout>
        </Frame>
               
        
    </VerticalStackLayout>
</ContentPage>